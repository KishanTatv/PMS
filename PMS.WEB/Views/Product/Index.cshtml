@{
    ViewData["Title"] = "Home Page";
}
@model List<PMS.Entity.Models.ProductShowDto>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <button class="float-end"> <a asp-action="Create">Create New Product</a> </button>

    <br />
    <table class="table">
        <thead>
            <tr>
                <th colspan="7" scope="col"><p>Project Management System</p></th>
            </tr>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">ISBN</th>
                <th scope="col">Price</th>
                <th scope="col">Author</th>
                <th scope="col">Category</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Title</td>
                    <td>@item.ISBN</td>
                    <td>@item.Price</td>
                    <td>@item.Author</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a asp-action="delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end me-3 pb-2">

            <li class="page-item">
                <a class="page-link text-warning"
                   asp-action="Index"
                   asp-route-PageNumber="0"
                   asp-route-PageSize="5">
                    1
                </a>
            </li>

            <li class="page-item">
                <a class="page-link text-warning"
                   asp-action="Index"
                   asp-route-PageNumber="1"
                   asp-route-PageSize="5">
                    2
                </a>
            </li>

        </ul>
    </nav>


</div>
